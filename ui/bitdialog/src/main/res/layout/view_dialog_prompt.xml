<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/baseRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/bit_dialog_padding"
            android:textSize="@dimen/bit_dialog_title_ts" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/contentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTv"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/bit_dialog_paddingMax"
            android:paddingTop="@dimen/bit_dialog_paddingMax"
            android:textSize="@dimen/bit_dialog_content_ts" />

        <View
            android:id="@+id/bottomv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bit_dialog_line"
            android:layout_below="@id/contentTv"
            android:background="@color/bit_dialog_line" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sureTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/bit_dialog_padding_l"
            android:text="@string/bit_dialog_sure"
            android:textColor="?attr/colorAccent"
            android:textSize="@dimen/bit_dialog_content_ts" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cancelTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/bit_dialog_padding_l"
            android:text="@string/bit_dialog_cancel"
            android:textColor="?attr/colorAccent"
            android:textSize="@dimen/bit_dialog_content_ts" />
    </LinearLayout>

</LinearLayout>